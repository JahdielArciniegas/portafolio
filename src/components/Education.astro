---
import { education } from "@cv";
import Sections from "@/components/Sections.astro";
---

<Sections>
  <ul class="flex gap-6">
    {
      education.map(({ institution, area, studyType }) => {
        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>{institution}</h3>
                  <h4>{area}</h4>
                </div>
                <h5>{studyType}</h5>
              </header>
            </article>
          </li>
        );
      })
    }
  </ul>
</Sections>
