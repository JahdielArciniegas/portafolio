---
import Sections from "./Sections.astro";
import { projects } from "@cv";
---

<Sections sectionId="projects">
  <div class="flex flex-col items-center justify-center gap-4 h-screen">
    <h2 class="text-2xl font-bold">Projects</h2>
    <div class="grid h-11/12 w-full grid-cols-3 grid-rows-4 gap-4">
      {
        projects.map(({ name, url, order }) => {
          return (
            <div
              class={`container bg-[#222727] ${order} p-4 rounded-2xl hover:border-[f5f4f6] cursor-pointer hover:border transition-colors duration-300`}
            >
              <a href={url} target="_blank">
                <h3>{name}</h3>
              </a>
            </div>
          );
        })
      }
    </div>
  </div>
</Sections>

<style>
  .primero {
    grid-row: 1/4;
  }
  .segundo {
    grid-column: 2/3;
    grid-row: 1/3;
  }
</style>
