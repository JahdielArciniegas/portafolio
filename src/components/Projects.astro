---
import Sections from "./Sections.astro";
import { projects } from "@cv";
---

<Sections sectionId="projects">
  <div class="flex flex-col items-center justify-center gap-4 h-screen">
    <h2 class="text-2xl font-bold">Projects</h2>
    <div class="grid h-11/12 w-full grid-cols-3 grid-rows-4 gap-4">
      {
        projects.map(({ name, url }) => {
          return (
            <div class="container first:row-[1_/_4] nth-[2]:row-[1_/_3] nth-[2]:col-[2_/_3] bg-[#222727] p-4 rounded-2xl hover:border-[f5f4f6] cursor-pointer hover:border transition-colors duration-300">
              <a href={url} target="_blank">
                <h3>{name}</h3>
              </a>
            </div>
          );
        })
      }
    </div>
  </div>
</Sections>
