---
import NavItem from "./NavItem.astro";
import Sections from "./Sections.astro";
import { projects } from "@cv";
---

<Sections sectionId="projects" title="Proyectos">
  <ul class="grid w-full md:grid-cols-2 xl:grid-cols-3 xl:gap-4 gap-10">
    {
      projects.map(({ name, description, stack, demo, repo, image }) => {
        return (
          <div class="container animate-pulse-fade-in animate-duration-1000">
            <div class="container relative h-80 xl:h-[425px] xl:pb-16 bg-card p-4 rounded-2xl hover:drop-shadow-primary-md transition-all duration-1000">
              <div class="lg:h-full lg:w-full flex flex-col items-center gap-4">
                <img
                  src={image}
                  alt={`imagen previa de ${name}`}
                  class="hidden xl:block"
                />
                <h3>{name}</h3>
                <p class="text-text">{description}</p>
                <div class="flex flex-wrap gap-1 w-full">
                  {stack.map((tech) => (
                    <span class="bg-primary text-secondary flex items-center justify-center px-1 py-0.5 rounded-full text-xs">
                      {tech}
                    </span>
                  ))}
                </div>
                <div class="absolute bottom-5 flex justify-around h-max w-full">
                  <NavItem url={demo} target="_blank">
                    Demo
                  </NavItem>
                  <NavItem url={repo} target="_blank">
                    Repositorio
                  </NavItem>
                </div>
              </div>
            </div>
          </div>
        );
      })
    }
  </ul>
</Sections>
