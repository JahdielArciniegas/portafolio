---
import Sections from "@/components/Sections.astro";
import Education from "./Studies/Education.astro";
import { certificates } from "@cv";
---

<Sections sectionId="studies">
  <div class="flex flex-col items-center justify-center gap-4">
    <h2 class="text-2xl font-bold">Estudios</h2>
    <Education />
    <div class="w-full">
      <h3 class="text-2xl">Certificados</h3>
      <ul>
        {
          certificates.map(({ name }) => {
            return (
              <li>
                <h4>{name}</h4>
              </li>
            );
          })
        }
      </ul>
    </div>
  </div>
</Sections>
