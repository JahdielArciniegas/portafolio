---
import { certificates } from "@cv";
---

<div class="w-full flex flex-col gap-4">
  <h3 class="text-2xl">Certificados</h3>
  <ul
    class="h-80 grid gap-2.5 grid-cols-3 grid-rows-2 justify-center content-end"
  >
    {
      certificates.map(({ name }) => {
        return (
          <li class="container bg-[#222727] first:row-[1_/_3] first:col-[1_/_2] p-4 rounded-2xl cursor-pointer  hover:drop-shadow-[0px_0px_10px_#55ca6d] hover:scale-110 transition-colors duration-300 ">
            <h4>{name}</h4>
          </li>
        );
      })
    }
  </ul>
</div>
