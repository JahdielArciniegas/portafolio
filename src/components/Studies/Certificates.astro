---
import { certificates } from "@cv";
---

<div class="w-full flex flex-col gap-4">
  <h3 class="text-2xl">Certificados</h3>
  <ul
    class="h-80 grid gap-2.5 grid-cols-3 grid-rows-2 justify-center content-end"
  >
    {
      certificates.map(({ name, important }) => {
        return (
          <li
            class={`container bg-[#222727] ${important} p-4 rounded-2xl hover:border-[f5f4f6] cursor-pointer hover:border transition-colors duration-300`}
          >
            <h4>{name}</h4>
          </li>
        );
      })
    }
  </ul>
</div>

<style>
  .primero {
    grid-column: 1 / 2;
    grid-row: 1/3;
  }
</style>
