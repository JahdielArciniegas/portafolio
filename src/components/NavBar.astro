---
const categories = [
  { name: "Sobre mi", url: "#" },
  { name: "Estudios", url: "#" },
  { name: "Proyectos", url: "#" },
  { name: "Habilidades", url: "#" },
];
---

<div class="fixed z-40 w-full flex flex-col items-center gap-2 mt-2">
  <div>
    <ul class="flex gap-8 font-mono text-[#f5f4f6]">
      {
        categories.map((category) => {
          return (
            <li>
              <a
                class="relative hover:after:w-full after:w-0 after:h-0.5 after:content-[''] after:bg-[#f5f4f6] after:absolute after:-bottom-1 after:left-0 after:transition-all after:duration-500"
                href={category.url}
              >
                {category.name}
              </a>
            </li>
          );
        })
      }
    </ul>
  </div>
  <div class="w-2/5 h-1 bg-[#55CA6D] rounded-3xl"></div>
</div>
