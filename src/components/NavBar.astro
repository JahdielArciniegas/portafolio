---
const categories = [
  { name: "Sobre m√≠", url: "#about-me" },
  { name: "Estudios", url: "#studies" },
  { name: "Habilidades", url: "#skills" },
  { name: "Proyectos", url: "#projects" },
];
---

<nav
  class="fixed z-40 w-full flex flex-col items-center gap-2 mt-2 backdrop-blur-xs"
>
  <img
    class="absolute left-20 -top-2 w-16 h-12 invert-100"
    src="/JAH-LOGO.webp"
    alt=""
  />
  <div>
    <ul class="flex gap-8">
      {
        categories.map((category) => {
          return (
            <li>
              <a
                class="2xl:text-xl text-base relative hover:after:w-full after:w-0 after:h-0.5 after:content-[''] after:bg-[#f5f4f6] after:absolute after:-bottom-1 after:left-0 after:transition-all after:duration-500"
                href={category.url}
              >
                {category.name}
              </a>
            </li>
          );
        })
      }
    </ul>
  </div>
  <div class="w-2/5 h-1 bg-[#55CA6D] rounded-3xl"></div>
</nav>
