---
const { sectionId, title } = Astro.props;
---

<section
  class="w-full h-auto flex items-center justify-center pt-4"
  id={sectionId}
>
  <div
    class="w-3/5 h-11/12 py-10 flex flex-col items-center justify-center gap-4"
  >
    <h2 class="max-sm:text-xl text-2xl font-bold">{title}</h2>
    <slot />
  </div>
</section>
